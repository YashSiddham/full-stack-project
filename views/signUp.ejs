<!DOCTYPE html>
<html lang="en">
    
    <%- include("layouts/header") -%> 

    <body id="page-top">
        <%- include("layouts/navbar") -%> 
        <header class="bg-primary bg-gradient text-white" style="margin-bottom: 220px">
            <div class="container px-4 text-center">
                <h1 class="fw-bolder">Create a new account</h1>
            </div>
        <% if (userCredentials) { %>
            <div class="container" style="width: 30%; margin-top: 50px;">
              <form method="POST" action="/signUp">

                <div class="form-group">
                  <label for="username" style="margin-bottom: 5px; font-weight: 700; padding-left: 7px;">Username:</label>
                  <input type="text" class="form-control" id="username" name="username" placeholder="Username"
                         value= <%= userCredentials.username %>>
                </div>

                  <% if (userCredentials.usernameConflict) {%>
                    <span style="color: red">Username already exists. Please select a different username</span>
                  <% } %>

                <div class="form-group" style="margin-top: 10px;">
                  <label for="password" style="margin-bottom: 5px; font-weight: 700; padding-left: 7px;">Password:</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder=""
                         value= <%= userCredentials.password %>>
                </div>

                  <div class="form-group" style="margin-top: 10px;">
                      <label for="password" style="margin-bottom: 5px; font-weight: 700; padding-left: 7px;">Repeat password:</label>
                      <input type="password" class="form-control" id="repeatPassword" name="repeatPassword" placeholder=""
                             value= <%= userCredentials.repeatPassword %>>
                      <%if (!userCredentials.matchingPasswords) {%>
                        <span style="color: red">Passwords do not match</span>
                      <% } %>
                  </div>

                  <div class="form-group" style="margin-top: 10px;">
                      <label for="userType" style="margin-bottom: 5px; font-weight: 700; padding-left: 7px;">User Type:</label>
                      <br>
                      <select class="form-control" id="userType" name="userType">
                          <option value="driver" default>Select a User Type</option>
                          <option value="admin">Admin</option>
                          <option value="driver">Driver</option>
                          <option value="examiner">Examiner</option>
                      </select>
                  </div>

                <div class="col-12">
                  <button class="btn btn-primary" type="submit" style="margin-top: 45px;
                  margin-left: 46.5%;
                  background-color: white;
                  color: #0d6efd;">Sign Up</button>
                </div>
              </form>
            </div>

            <% } %>
        </header>
        <%- include("layouts/footer") -%> 
        <%-  include("layouts/scripts")-%> 
    </body>
</html>
